<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary w-100">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="https://img.favpng.com/7/4/20/penguin-stock-photography-royalty-free-png-favpng-iJPWjKQgW4T9WXUKjyXbDY23U.jpg" alt="Bootstrap" width="40" height="40">
            </a>

            <div class=" navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="trade" asp-action="index">Main</a>
                    </li>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="trade" asp-action="orders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="stocks" asp-action="explore">Explore</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="trade" asp-action="orderstopdf">Download all orders as PDF</a>
                    </li>

                </ul>
            </div>
            <form class="d-flex" role="search" action="/Stocks/search">
                <input class="form-control me-2" type="search" name="symbol" placeholder="Search by symbol" aria-label="Search" required>
                <button class="btn btn-success" type="submit" >Search</button>
            </form>
        </div>
    </nav>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="m-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/index">Home</a></li>
            @RenderSection("Breadcrumb", false)
        </ol>
    </nav>
    @RenderBody()
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @RenderSection("script", false)
</body>

</html>
